<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.octrinsic.medicalapp.DoctorLogin"
    android:background="@drawable/mybutton"
    tools:showIn="@layout/activity_doctor_login"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Facility"
        android:shadowColor="#1499A8"
        android:textColor="#006295"
        android:id="@+id/textView22"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/spinner_selectFacility"
        android:layout_alignStart="@+id/spinner_selectFacility"
         />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_selectFacility"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/textView22"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please login"
        android:shadowColor="#1499A8"
        android:layout_marginTop="35dp"
        android:textColor="#006295"
        android:id="@+id/textView23"
        android:layout_below="@+id/spinner_selectFacility"
        android:layout_alignRight="@+id/btnLogin"
        android:layout_alignEnd="@+id/btnLogin"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:id="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="250dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_email"
            android:hint="Username" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/relativeLayout2"
        android:gravity="clip_horizontal|center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="250dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_pass"
            android:hint="Password"
            android:layout_marginTop="20dp"/>


    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:text="LOGIN"
        android:textColor="#ffffff"
        android:textSize="8pt"
        android:id="@+id/btnLogin"
        android:onClick="onDoctorLogin"
        android:background="@drawable/ovalshape"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
