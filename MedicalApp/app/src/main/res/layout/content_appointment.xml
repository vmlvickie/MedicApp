<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    android:background="@drawable/mybutton"
    tools:context="com.octrinsic.medicalapp.Appointment"
    tools:showIn="@layout/activity_appointment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/date_due_text"
        android:layout_marginTop="30dp"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvDateDue"
        android:layout_toStartOf="@+id/tvDateDue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvDateDue"
        android:layout_alignTop="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Facility:"
        android:id="@+id/textView12"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView10"
        android:layout_toLeftOf="@+id/tvFacility"
        android:layout_toStartOf="@+id/tvFacility" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvFacility"
        android:layout_alignTop="@+id/textView12"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name:"
        android:id="@+id/textView14"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvPatientName"
        android:layout_alignTop="@+id/textView14"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12" />



    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvPatientPreferredTime"
        android:layout_below="@+id/textView14"
        android:layout_toRightOf="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time:"
        android:id="@+id/textView13"
        android:layout_alignTop="@+id/tvPatientPreferredTime"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approve"
        android:width="300dp"
        android:textColor="#ffffff"
        android:textSize="10pt"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:background="@drawable/ovalshape"
        android:layout_marginTop="30dp"
        android:id="@+id/btnApprove"
        android:onClick="onApprove"
        android:layout_below="@+id/tvPatientName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:width="300dp"
        android:textColor="#ffffff"
        android:textSize="10pt"
        android:layout_marginLeft="25dp"
        android:background="@drawable/ovalshape"
        android:layout_marginTop="30dp"
        android:id="@+id/btnReject"
        android:onClick="onCancel"
        android:layout_below="@+id/btnApprove"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refer patient"
        android:width="300dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/btnRefer"
        android:background="@drawable/ovalshape"
        android:onClick="onPatientRefer"
        android:layout_marginTop="33dp"
        android:textColor="#ffffff"
        android:textSize="10pt"
        android:layout_below="@+id/btnReject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
