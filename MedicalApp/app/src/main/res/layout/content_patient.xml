<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mybutton"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.octrinsic.medicalapp.Patient"
    tools:showIn="@layout/activity_patient">

    <TextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="#006295"
        android:textSize="12pt"
        android:text="@string/welcomMessage"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Appointments"
        android:id="@+id/btnView"
        android:textColor="#ffffff"
        android:textSize="10pt"
        android:background="@drawable/ovalshape"
        android:onClick="goView"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btnAppointment"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Appointment"
        android:background="@drawable/ovalshape"
        android:id="@+id/btnAppointment"
        android:onClick="onBooking"
        android:textColor="#ffffff"
        android:textSize="10pt"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView9"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignLeft="@+id/btnView"
        android:layout_alignStart="@+id/btnView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter biodata"
        android:id="@+id/button4"
        android:textColor="#ffffff"
        android:textSize="10pt"
        android:onClick="onEntryBioData"
        android:background="@drawable/ovalshape"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btnView"
        android:layout_alignRight="@+id/btnReferrals"
        android:layout_alignEnd="@+id/btnReferrals"
        android:layout_alignLeft="@+id/btnReferrals"
        android:layout_alignStart="@+id/btnReferrals"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Referrals"
        android:id="@+id/btnReferrals"
        android:onClick="viewReferrals"
        android:background="@drawable/ovalshape"
        android:layout_marginTop="49dp"
        android:textColor="#ffffff"
        android:textSize="10pt"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
