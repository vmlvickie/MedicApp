<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mybutton"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.octrinsic.medicalapp.Patient"
    tools:showIn="@layout/activity_patient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="#006295"
        android:textSize="12pt"
        android:text="@string/welcomMessage"
        android:layout_height="wrap_content"
        android:id="@+id/textView9" />

    <Button
        android:layout_width="wrap_content"
        android:width="450dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/view_string"
        android:textColor="#ffffff"
        android:textSize="10pt"
        android:id="@+id/btnView"
        android:background="@drawable/ovalshape"
        android:onClick="goView"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnAppointment" />

    <Button
        android:layout_width="wrap_content"
        android:width="450dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="BOOK APPOINTMENT"
        android:background="@drawable/ovalshape"
        android:id="@+id/btnAppointment"
        android:onClick="onBooking"
        android:textColor="#ffffff"
        android:textSize="10pt"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9" />

    <Button
        android:layout_width="wrap_content"
        android:width="450dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Enter biodata"
        android:layout_marginTop="20dp"
        android:id="@+id/button4"
        android:textColor="#ffffff"
        android:textSize="10pt"
        android:onClick="onEntryBioData"
        android:background="@drawable/ovalshape"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnView"
        android:layout_alignEnd="@+id/btnView"
        android:layout_below="@+id/btnView" />
    <Button
        android:width="450dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Referrals"
        android:textColor="#ffffff"
        android:textSize="10pt"
        android:layout_gravity="center"
        android:id="@+id/btnReferrals"
        android:onClick="viewReferrals"
        android:background="@drawable/ovalshape"
        android:layout_below="@+id/button4"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
